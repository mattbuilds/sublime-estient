{   
    "variables": {
        "base_url": "jsonplaceholder.typicode.com"
    },
    "requests": [
        {
            "method": "GET", 
            "url": "https://{{base_url}}/posts/1", 
            "headers": {
                "Content-type": "application/json", 
                "Authorization": "SomePassword", 
                "Accept": "text/plain"
            }, 
            "tests": [
                {
                    "assert": "equal", 
                    "expected": 200, 
                    "actual": "status_code", 
                    "result": true
                }, 
                {
                    "assert": "equal", 
                    "expected": 1, 
                    "actual": {
                        "response": [
                            "id"
                        ]
                    }, 
                    "result": true
                },
                {
                    "assert":"contain",
                    "expected":"a",
                    "actual": {
                        "response":[
                            "body"
                        ]
                    }
                },
                {
                    "assert":"notContain",
                    "expected":"asdjifowefwoi",
                    "actual": {
                        "response":[
                            "body"
                        ]
                    }
                }
            ], 
            "variables": [
                {
                    "name": "id", 
                    "value": {
                        "response": [
                            "id"
                        ]
                    }
                }
            ]
        }
    ]
}